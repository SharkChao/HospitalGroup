<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:lx_ptr="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.lenovohit.lartemis_api.views.LXHeaderView
        android:id="@+id/lx_header_view_rotate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        lx_ptr:ptr_duration_to_close="200"
        lx_ptr:ptr_duration_to_close_header="400"
        lx_ptr:ptr_keep_header_when_refresh="true"
        lx_ptr:ptr_pull_to_fresh="false"
        lx_ptr:ptr_ratio_of_header_height_to_refresh="1.0"
        lx_ptr:ptr_resistance="1.7">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvMainHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none" />

    </com.lenovohit.lartemis_api.views.LXHeaderView>
    <FrameLayout
        android:id="@+id/home_title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <View
            android:id="@+id/home_title_bar_bg_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/scanning_layout"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="50dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/iv_title_scan_selector"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="扫啊扫"
                    android:textColor="@color/lx_title_bar_font_color_selector"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:background="@drawable/tv_title_bar_search_corner_shape"
                >
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/lx_iv_search_icon"
                    />
                <TextView
                    android:layout_marginLeft="3dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="搜索医院,医生及科室"
                    />
                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/lx_iv_microphone"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/advisory_layout"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="50dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/iv_title_bar_advisory_icon_selector"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="消息"
                    android:textColor="@color/lx_title_bar_font_color_selector"
                    />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="82dp"
              android:orientation="horizontal"
              android:background="@color/white">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvModuleLogo"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/spacing_biger"
        android:scaleType="fitXY"
        app:placeholderImage="@drawable/ic_empty"
        app:placeholderImageScaleType="fitXY"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/app_interval_10">
        <TextView
            android:id="@+id/tvModuleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="模块名"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/font_size_B"
            android:layout_marginTop="@dimen/app_interval_20"/>
        <TextView
            android:id="@+id/tvModuleDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="模块描述"
            style="@style/greyTextStyleSmall"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/app_interval_10"/>
    </LinearLayout>
</LinearLayout>
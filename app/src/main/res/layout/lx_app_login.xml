<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grey_normal_bg"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="40dip"
        android:background="@color/app_line_colors" />

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="fill_parent"
        android:layout_height="43dip"
        android:background="@color/white"
        android:hint="输入手机号码"
        android:paddingLeft="@dimen/app_interval_20"
        android:paddingRight="10dip"
        android:text=""
        android:inputType="number"
        android:textColor="@color/black" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/app_line_colors" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_interval_5"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edtCode"
            android:layout_width="0dip"
            android:layout_height="45dip"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="输入短信验证码"
            android:paddingLeft="@dimen/app_interval_20"
            android:paddingRight="10dip"
            android:text=""
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnCode"
            android:layout_width="140dip"
            android:layout_height="45dip"
            android:background="@drawable/lx_btn_complete_select"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_B" />

    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/app_line_colors" />

    <Button
        android:id="@+id/btnGetUser"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:layout_marginTop="@dimen/app_interval_20"
        android:background="@drawable/lx_btn_complete_select"
        android:text="登 录"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_B" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dip"
        android:textColor="@color/description_gray"
        android:textSize="@dimen/font_size_B"
        android:text="注:无需注册,使用手机号码和短信验证码直接登录"/>

</LinearLayout>
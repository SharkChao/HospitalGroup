            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/declare_title2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_C" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/declare_details3"
                android:textSize="@dimen/font_size_B" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/declare_details4"
                android:textSize="@dimen/font_size_B" />

<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/emptyView"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/grey_normal_bg"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_normal_bg"
        >
        <ImageView
            android:layout_width="154dp"
            android:layout_height="172dp"
            android:src="@mipmap/lx_no_network_default"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:scaleType="fitCenter"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据跑到火星上去了~~"
            style="@style/greyTextStyleNormal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_large"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新刷新"
            style="@style/whiteTextStyle"
            android:background="@drawable/btn_color_accent_select"
            android:paddingLeft="@dimen/spacing_huge"
            android:paddingRight="@dimen/spacing_huge"
            android:paddingTop="@dimen/spacing_smaller"
            android:paddingBottom="@dimen/spacing_smaller"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_large"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>

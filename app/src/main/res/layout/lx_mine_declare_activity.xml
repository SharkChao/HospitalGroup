            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/declare_title3"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_C" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/declare_details5"
                android:textSize="@dimen/font_size_B" />
            <!-- 免责声明 -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/declare_title4"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_C" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/declare_details6"
                android:textSize="@dimen/font_size_B" />

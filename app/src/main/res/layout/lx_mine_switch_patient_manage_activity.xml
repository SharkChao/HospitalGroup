<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_normal_bg"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="@dimen/app_interval_10"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/app_line_colors" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:text="手机号码:"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_B" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入手机号码(必填)"
            android:inputType="number"
            android:padding="10dip"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_B" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/app_line_colors" />

    <ImageView
        android:layout_marginTop="@dimen/app_interval_10"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/app_line_colors" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:text="验  证  码:"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_B" />

        <EditText
            android:id="@+id/edtVerifyCode"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入验证码"
            android:inputType="number"
            android:padding="10dip"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_B" />

        <Button
            android:id="@+id/btnCode"
            android:layout_width="120dip"
            android:layout_height="41dip"
            android:background="@drawable/lx_btn_complete_select"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_B" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/app_line_colors"
        />
    <Button
        android:id="@+id/btnPatientManage"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:layout_marginTop="@dimen/app_interval_20"
        android:background="@drawable/lx_btn_complete_select"
        android:text="新增就诊者"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_B"
        android:layout_marginBottom="@dimen/app_interval_10"/>


    <LinearLayout
        android:id="@+id/llSelectHospitalCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/app_line_colors"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="请选择要绑定的就诊卡"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/font_size_B"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/white"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/app_line_colors"
            />

        <ListView
            android:id="@+id/lvHospitalCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/grey_line_bg"
            android:dividerHeight="@dimen/app_interval_10"
            android:cacheColorHint="#00000000"
            android:descendantFocusability="blocksDescendants"
            android:drawSelectorOnTop="false"
            android:listSelector="@color/transparent"
            android:background="@color/white"
            />
    </LinearLayout>
</LinearLayout>